    <script>
        // --- Get DOM Elements ---
        const displayNameInput = document.getElementById('displayName');
        const verifiedCheckbox = document.getElementById('verified');
        const usernameInput = document.getElementById('username');
        const profilePicInput = document.getElementById('profilePic');
        const timestampInput = document.getElementById('timestamp');
        const tweetTextInput = document.getElementById('tweetText');
        const locationInput = document.getElementById('location'); // New
        const tweetMediaInput = document.getElementById('tweetMedia');
        const altTextControl = document.getElementById('altTextControl'); // New
        const altTextEnabledCheckbox = document.getElementById('altTextEnabled'); // New
        const retweetCountInput = document.getElementById('retweetCount');
        const quoteCountInput = document.getElementById('quoteCount');
        const likeCountInput = document.getElementById('likeCount');
        const bookmarkCountInput = document.getElementById('bookmarkCount');
        const viewCountInput = document.getElementById('viewCount');
        const screenshotBtn = document.getElementById('screenshotBtn');

        const displayNamePreview = document.getElementById('displayNamePreview');
        const verifiedBadgePreview = document.getElementById('verifiedBadgePreview');
        const usernamePreview = document.getElementById('usernamePreview');
        const profilePicPreview = document.getElementById('profilePicPreview');
        const timestampPreview = document.getElementById('timestampPreview');
        const headerDot = document.getElementById('headerDot');
        const tweetTextPreview = document.getElementById('tweetTextPreview');
        const postLocationPreview = document.getElementById('postLocationPreview'); // New
        const locationTextPreview = document.getElementById('locationTextPreview'); // New
        const tweetMediaContainer = document.getElementById('tweetMediaContainer');
        const tweetMediaPreview = document.getElementById('tweetMediaPreview');
        const altBadgePreview = document.getElementById('altBadgePreview'); // New
        const tweetStatsPreview = document.getElementById('tweetStatsPreview');
        const retweetsStat = document.getElementById('retweetsStat');
        const quotesStat = document.getElementById('quotesStat');
        const likesStat = document.getElementById('likesStat');
        const bookmarksStat = document.getElementById('bookmarksStat');
        const viewsStat = document.getElementById('viewsStat');
        const retweetCountPreview = document.getElementById('retweetCountPreview');
        const quoteCountPreview = document.getElementById('quoteCountPreview');
        const likeCountPreview = document.getElementById('likeCountPreview');
        const bookmarkCountPreview = document.getElementById('bookmarkCountPreview');
        const viewCountPreview = document.getElementById('viewCountPreview');
        const screenshotWrapper = document.getElementById('screenshotWrapper');

        const defaultProfilePic = 'data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1200 1227" fill="none"><path d="M714.163 519.284L1160.89 0H1055.03L667.137 450.887L357.328 0H0L468.492 681.821L0 1226.37H105.866L515.491 750.218L842.672 1226.37H1200L714.137 519.284H714.163ZM569.165 687.828L521.697 619.934L144.011 79.6909H316.016L604.345 514.974L651.812 582.869L1056.85 1154.33H884.845L569.165 687.854V687.828Z" fill="black"/></svg>';


        // --- Helper Function for File Reading ---
        function readFileAsDataURL(fileInput, callback) {
            if (fileInput.files && fileInput.files[0]) {
                const reader = new FileReader();
                reader.onload = (e) => { callback(e.target.result); };
                reader.onerror = (e) => { console.error("FileReader error:", e); callback(null); };
                reader.readAsDataURL(fileInput.files[0]);
            } else {
                callback(null); // No file selected
            }
        }

        // --- Number Formatting (Abbreviate large numbers) ---
        function formatStatNumber(num) {
            if (isNaN(num) || num === null) return '0';
             num = Number(num); // Ensure it's a number
             if (num < 0) num = 0;

             if (num >= 1000000) {
                 const millions = num / 1000000;
                 // Show one decimal place only if it's not .0
                 return (millions % 1 === 0 ? millions.toFixed(0) : millions.toFixed(1)) + 'M';
            }
            if (num >= 10000) { // Start abbreviating at 10k for X
                 const thousands = num / 1000;
                 return (thousands % 1 === 0 ? thousands.toFixed(0) : thousands.toFixed(1)) + 'K';
            }
            if (num >= 1000) {
                 return num.toLocaleString(); // Add comma for thousands
             }
             return num.toString();
        }

        // --- Update Functions ---
        function updateDisplayName() { displayNamePreview.textContent = displayNameInput.value.trim() || 'User'; }
        function updateVerifiedBadge() { verifiedBadgePreview.classList.toggle('visible', verifiedCheckbox.checked); }
        function updateUsername() {
            let handle = usernameInput.value.trim();
            if (handle && !handle.startsWith('@')) handle = '@' + handle;
            usernamePreview.textContent = handle || '@username';
            updateHeaderDotVisibility();
        }
        function updateProfilePic() {
             readFileAsDataURL(profilePicInput, (dataUrl) => {
                profilePicPreview.src = dataUrl || defaultProfilePic;
             });
        }
         function updateTimestamp() {
             timestampPreview.textContent = timestampInput.value.trim() || '1m';
             updateHeaderDotVisibility();
         }
         function updateHeaderDotVisibility() {
              const hasUsername = usernamePreview.textContent && usernamePreview.textContent !== '@username';
              const hasTimestamp = timestampPreview.textContent && timestampPreview.textContent !== '1m';
              // Only show dot if *both* username AND timestamp have meaningful content
              headerDot.style.display = hasUsername && hasTimestamp ? 'inline' : 'none';
         }
        function updateTweetText() { tweetTextPreview.textContent = tweetTextInput.value || ' '; } // Ensure space for height if empty
        function updateLocation() { // New
            const locationValue = locationInput.value.trim();
            if (locationValue) {
                locationTextPreview.textContent = locationValue;
                postLocationPreview.style.display = 'block';
            } else {
                postLocationPreview.style.display = 'none';
            }
        }
        function updateTweetMedia() {
             readFileAsDataURL(tweetMediaInput, (dataUrl) => {
                if (dataUrl) {
                    tweetMediaPreview.src = dataUrl;
                    tweetMediaContainer.style.display = 'block';
                    altTextControl.style.display = 'flex'; // Show ALT checkbox control
                    updateAltBadge(); // Update badge visibility
                } else {
                     tweetMediaPreview.src = '';
                     tweetMediaContainer.style.display = 'none';
                     altTextControl.style.display = 'none'; // Hide ALT checkbox control
                     altBadgePreview.style.display = 'none'; // Hide badge itself
                     altTextEnabledCheckbox.checked = false; // Uncheck if image removed
                }
                updateStats(); // Update border visibility based on content
            });
        }
        function updateAltBadge() { // New
             const hasMedia = tweetMediaContainer.style.display === 'block';
             altBadgePreview.style.display = hasMedia && altTextEnabledCheckbox.checked ? 'block' : 'none';
        }

        function updateStats() {
            const stats = [
                { input: retweetCountInput, preview: retweetCountPreview, element: retweetsStat },
                { input: quoteCountInput, preview: quoteCountPreview, element: quotesStat },
                { input: likeCountInput, preview: likeCountPreview, element: likesStat },
                { input: bookmarkCountInput, preview: bookmarkCountPreview, element: bookmarksStat },
                { input: viewCountInput, preview: viewCountPreview, element: viewsStat },
            ];

            let visibleStats = 0;
            stats.forEach(stat => {
                const value = parseInt(stat.input.value || '0', 10);
                if (!isNaN(value) && value > 0) {
                     stat.preview.textContent = formatStatNumber(value);
                     stat.element.style.display = 'inline-block'; // Use inline-block for wrapping
                     visibleStats++;
                 } else {
                    stat.element.style.display = 'none';
                 }
            });

            const showStats = visibleStats > 0;
            tweetStatsPreview.style.display = showStats ? 'flex' : 'none';

             // Determine if there is content above the stats bar
            const hasContentAbove = (tweetTextPreview.textContent.trim() !== '') ||
                                    (postLocationPreview.style.display === 'block') ||
                                    (tweetMediaContainer.style.display === 'block');

            tweetStatsPreview.style.borderTop = (showStats && hasContentAbove) ? '1px solid #eff3f4' : 'none';
        }


        function generateScreenshot() {
            screenshotBtn.classList.add('loading');
            screenshotBtn.disabled = true;

            const elementToCapture = document.getElementById('postPreview'); // Capture the article itself

            html2canvas(elementToCapture, {
                 allowTaint: true, // Attempt to capture cross-origin images if possible (may not always work)
                 useCORS: true,
                 logging: false,
                 backgroundColor: '#ffffff', // Ensure white background
                 scale: window.devicePixelRatio * 2, // Increase scale for higher resolution
                 scrollX: 0, // Ensure capture starts at the left edge
                 scrollY: 0, // Ensure capture starts at the top edge
                 windowWidth: elementToCapture.scrollWidth, // Use element's width
                 windowHeight: elementToCapture.scrollHeight // Use element's height
             }).then(canvas => {
                const image = canvas.toDataURL('image/png', 1.0); // Use PNG format, max quality
                const link = document.createElement('a');
                // Generate a slightly more descriptive filename
                const usernamePart = (usernameInput.value || 'user').replace(/[^a-z0-9]/gi, '_').toLowerCase();
                const datePart = new Date().toISOString().slice(0, 10); // YYYY-MM-DD
                link.download = `fake_x_post_${usernamePart}_${datePart}.png`;
                link.href = image;
                link.click();

            }).catch(err => {
                 console.error("Screenshot generation failed:", err);
                 alert("Oops! Could not generate screenshot. If using an image from another website, try downloading and re-uploading it. Check console for details.");
             }).finally(() => {
                // Ensure button is re-enabled regardless of success/failure
                 screenshotBtn.classList.remove('loading');
                 screenshotBtn.disabled = false;
             });
        }

        // --- Utility Functions ---
        function copyLink() {
             // Replace with your actual tool URL if known, otherwise use current location
             const toolUrl = '[YOUR_TOOL_URL_HERE]' === '[YOUR_TOOL_URL_HERE]' ? window.location.href.split('#')[0] : '[YOUR_TOOL_URL_HERE]';
            navigator.clipboard.writeText(toolUrl).then(() => {
                 alert("Tool link copied to clipboard!");
             }, (err) => {
                 alert("Failed to copy link. Please copy it manually from the address bar.");
                 console.error('Could not copy text: ', err);
             });
        }

        // --- Event Listeners ---
        displayNameInput.addEventListener('input', updateDisplayName);
        verifiedCheckbox.addEventListener('change', updateVerifiedBadge);
        usernameInput.addEventListener('input', updateUsername);
        profilePicInput.addEventListener('change', updateProfilePic);
        timestampInput.addEventListener('input', updateTimestamp);
        tweetTextInput.addEventListener('input', updateTweetText);
        locationInput.addEventListener('input', updateLocation); // New
        tweetMediaInput.addEventListener('change', updateTweetMedia);
        altTextEnabledCheckbox.addEventListener('change', updateAltBadge); // New

        [retweetCountInput, quoteCountInput, likeCountInput, bookmarkCountInput, viewCountInput].forEach(input => {
            input.addEventListener('input', updateStats);
        });

        screenshotBtn.addEventListener('click', generateScreenshot);

        // --- Initial Call to Populate Preview on Load ---
        function initializePreview() {
            updateDisplayName();
            updateVerifiedBadge();
            updateUsername();
            updateProfilePic(); // Update to load default if needed
            updateTimestamp();
            updateTweetText();
            updateLocation(); // New
            updateTweetMedia(); // This will handle alt text control visibility initially
            updateStats();
            updateHeaderDotVisibility();
        }

        initializePreview();

    </script>

